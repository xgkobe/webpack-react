{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "lib": ["es5", "es2015", "dom", "ESNext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/globals.d.ts",
    "node_modules/@types/**/*.d.ts", "src/utils/http.ts",
  ],
  "exclude": ["**/node_modules/*", "**/*.spec.ts"]
}
